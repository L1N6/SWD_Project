<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SWD392_Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SWD392_Project.styles.css" asp-append-version="true" />
    <style>
        /* Thay đổi màu sắc và hiệu ứng hover cho nút */
        .banner-buttons button {
            margin-left: 10px;
            font-size: 16px;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .banner-buttons button:hover {
                background-color: #2980b9;
                color: #fff;
            }

        .banner-link {
            text-decoration: none;
            color: #fff;
            transition: color 0.3s ease;
        }

            .banner-link:hover {
                color: #f39c12;
            }

        .banner-title {
            font-size: 36px;
            margin: 0;
            transition: color 0.3s ease;
        }

            .banner-title:hover {
                color: #f39c12; /* Màu chữ khi hover */
            }

        /* Chia đôi banner */
        .banner {
            background-color: #3498db;
            padding: 20px;
            display: flex;
            justify-content: space-between; /* Chia đôi banner */
            align-items: center;
        }

        .banner-buttons {
            display: flex;
            gap: 10px; /* Khoảng cách giữa các nút */
        }

            .banner-buttons a {
                font-size: 16px;
                transition: background-color 0.3s ease, color 0.3s ease;
            }

                .banner-buttons a:hover {
                    background-color: #2980b9;
                    color: #fff;
                }


    </style>
</head>
<body>
    <!-- Thay thế phần header bằng phần banner tùy chỉnh -->
    <div class="banner">
        <div class="banner">
            <a href="@Url.Action("Index", "Events")" class="banner-link">
                <h1 class="banner-title">Event Management</h1>
            </a>
        </div>
        <div class="banner-buttons">
            @if (TempData["UserName"] == null)
            {
                <a href="/SignIn" class="btn btn-primary">Sign In</a>
                <a href="/SignUp" class="btn btn-success">Sign Up</a>
            }
            else
            {
                <a href="/Events/ProfileEvent" class="btn btn-primary">My Events</a>
                <a href="/User/UserProfile" class="btn btn-success">Profile</a>
                <a href="/User/LogOut" class="btn btn-danger">Sign Out</a>
            }
        </div>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-center">
        <p>&copy; 2023 - SWD392_Project</p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>